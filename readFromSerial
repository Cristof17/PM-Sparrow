plat = platform.system()
ser = None

if plat == 'Linux':
	print "It's Linux"
	ser = serial.Serial('/dev/ttyUSB0', 9600)
elif plat == 'Windows':
	print "It's Windows"
	ser = serial.Serial('COM7', 9600)

#url = URL

#headers = {'X-ApiKey': API_KEY}
#payload = {'value' : '34'}
while 1:
	line = ser.readline()
	print line
ser.close();
